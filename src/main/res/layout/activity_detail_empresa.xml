<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.detailEmpresaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/picture_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/empresa_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Juan Salazar"/>

        <TextView
            android:id="@+id/direccion_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:text="jsalazar@gmail.com"/>

        <TextView
            android:id="@+id/correo_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            tools:text=""/>
        <TextView
            android:id="@+id/numero_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            tools:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#D5DBDB"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000"
            android:padding="50dp"
            android:text="hola amigos de youtube en esta ocacion les traigo un nuevo video"/>

        <HorizontalScrollView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/web_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_radius2"
                    android:text="web"
                    android:textColor="@color/colortext_button_web"
                    android:drawableTop="@drawable/ic_web"/>

                <Button
                    android:id="@+id/email_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/colortext_button_email"
                    android:background="@drawable/border_radius2"
                    android:text="email"
                    android:drawableTop="@drawable/ic_email"/>

                <Button
                    android:id="@+id/share_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_radius2"
                    android:text="share"
                    android:textColor="@color/colortext_button_share"
                    android:drawableTop="@drawable/ic_share"/>

                <Button
                    android:id="@+id/message_button"
                    android:layout_width="100dp"
                    android:layout_below="@+id/cargo"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_radius2"
                    android:layout_margin="10dp"
                    android:text="Sms"
                    android:textColor="@color/colortext_button_message"
                    android:drawableTop="@drawable/ic_message"/>

                <Button
                    android:id="@+id/call_buttton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableTop="@drawable/ic_phone"
                    android:textColor="#fff"
                    android:background="@drawable/border_radius2"
                    android:text="llamar"/>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</ScrollView>
